@model Book.Reading.Event.Models.SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
}


<h1 class="font-weight-bold text-dark">SignUp</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="username" class="control-label text-dark font-weight-bold"></label>
                <input asp-for="username" class="form-control input-sm" placeholder="Username..." autocomplete="off"/>
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label text-dark font-weight-bold"></label>
                <input asp-for="email" class="form-control input-sm" placeholder="Email Address..." autocomplete="off" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label text-dark font-weight-bold"></label>
                <input asp-for="password" class="form-control input-sm" placeholder="Password..."  autocomplete="off"/>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="confirmpassword" class="control-label text-dark font-weight-bold"></label>
                <input asp-for="confirmpassword" class="form-control input-sm" placeholder="Confirm Password..."  autocomplete="off"/>
                <span asp-validation-for="confirmpassword" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Sign Up" class="btn btn-dark btn-block"/>
            </div>
        </form>
        <div>
            <div class="text-dark font-weight-bold"> Click <a asp-controller="Account" asp-action="Login">here</a> to Login</div>
        </div>

    </div>
</div>



